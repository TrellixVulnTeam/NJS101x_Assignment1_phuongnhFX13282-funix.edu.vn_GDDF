<div class="container">
    <div class="row">
        {{#each employees}}
                <div class="avarta-image col-lg-4">
                    <div style="height:350px">
                        <img src="{{this.avartaimage}}" class="card-img-top mt-3" alt="..." style="height:100px" />
                            <div class="card-body">
                                <h5 class="card-title text-center">{{this.name}}</h5>
                                <h6 class="card-title text-center">{{this.title}}</h6>
                                <div
                                class="d-flex justify-content-around align-items-center"
                                style="width:100%;"
                                >
                                <button
                                    type="button"
                                    class="btn btn-success mt-3 text-align-center"
                                    style="width:40%"
                                >Edit</button>
                                <button
                                    type="button"
                                    class="btn btn-success mt-3 text-align-center"
                                    style="width:40%"
                                >Finish</button>
                                </div>
                            </div>
                    </div>
                </div>
                <div class="covid-info col-lg-8">
                    <table class="table">
                        <tbody>
                            <tr>
                            <th scope="row">1</th>
                                <td>Being Covid:</td>
                                <td class="text-center">{{this.covidinfo.covidstatus}}</td>
                            </tr>
                            <tr>
                            <th scope="row">2</th>
                                <td>Time of being Covid infected:</td>
                                <td class="text-center">{{this.covidinfo.covidinfected}}</td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>Time of being Covid vacinated</td>
                                <td class="text-center">{{this.covidinfo.covidvacinated}}</td>
                            </tr>
                            <tr>
                                <th scope="row">4</th>
                                <td>Covid First Dose Type :</td>
                                <td class="text-center">{{this.covidinfo.coviddose1type}}</td>
                            </tr>
                            <tr>
                                <th scope="row">5</th>
                                <td>Covid First Dose take date:</td>
                                <td class="text-center">{{dateconverter this.covidinfo.coviddose1takedate}}</td>
                            </tr>
                            <tr>
                                <th scope="row">6</th>
                                <td>Covid Second Dose Type :</td>
                                <td class="text-center">{{this.covidinfo.coviddose2type}}</td>
                            </tr>
                            <tr>
                                <th scope="row">7</th>
                                <td>Covid Second Dose take date:</td>
                                <td class="text-center">{{dateconverter this.covidinfo.coviddose2takedate}}</td>
                            </tr>
                            <tr>
                                <th scope="row">8</th>
                                <td>Covid Third Dose Type :</td>
                                <td class="text-center">{{this.covidinfo.coviddose3type}}</td>
                            </tr>
                            <tr>
                                <th scope="row">9</th>
                                <td>Covid Third Dose take date:</td>
                                <td class="text-center">{{dateconverter this.covidinfo.coviddose3takedate}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
        {{/each}}
    </div>
</div>