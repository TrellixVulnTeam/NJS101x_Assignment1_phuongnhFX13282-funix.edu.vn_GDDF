<div class="container">
  <div class="d-flex flex-column justify-content-center">
    <h1 class="text-center">Register Form</h1>
    <form method="Post" action="/store">
      <div class="d-flex flex-column align-items-center">
        <div class="d-flex flex-column">
          <div class="d-flex flex-column justify-content-start align-items-center mt-5">
            <h3 class="text-center">Employee personal information</h3>
            <div class="mb-3 mt-3">
              <label for="employeeID" class="form-label">Employee ID</label>
              <input type="number" class="form-control" name ='employeeID' style="width:100%;">
            </div>
            <div class="mb-3">
              <label for="name" class="form-label">Full Name</label>
              <input type="text" class="form-control" name ='name'>
            </div>
            <div class="mb-3">
              <label for="dateofbirth" class="form-label">Date of Birth</label>
              <input type="date" class="form-control" name ='dateofbirth'>
            </div>
            <div class="mb-3">
              <label for="placeofbirth" class="form-label">Place of Birth</label>
              <input type="text" class="form-control" name ='placeofbirth'>
            </div>
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" name ='title'>
            </div>
            <div class="mb-3">
              <label for="salaryScale" class="form-label">Salary Scale</label>
              <input type="number" class="form-control" name ='salaryScale'>
            </div>
            <div class="mb-3">
              <label for="startDate" class="form-label">Start Date</label>
              <input type="date" class="form-control" name ='startDate'>
            </div>
            <div class="mb-3">
              <label for="department" class="form-label">Department</label>
              <input type="text" class="form-control" name ='department'>
            </div>
            <div class="mb-3">
              <label for="annualLeave" class="form-label">Annual Leave (days)</label>
              <input type="number" class="form-control" name ='annualLeave'>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="text" class="form-control" name="password">
            </div>
          </div>
          <div class="d-flex flex-column justify-content-start align-items-center mt-5">
            <h3 class="text-center">Employee Covid-19 status</h3>
            <div class="mb-3 mt-3">
              <label for="covidstatus" class="form-label">Có Đang bị Covid</label>
              <select class="form-select" aria-label="Default select example" name="covidstatus">
                <option selected>---Open this select menu---</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="covidinfected" class="form-label">How many times did you infect?</label>
              <select class="form-select" aria-label="Default select example" name="covidinfected">
                <option selected>---Open this select menu---</option>
                <option value="1 times">1 times</option>
                <option value="2 times">2 times</option>
                <option value="3 times">3 times</option>
                <option value="more than 3 times">>3 times</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="covidvacinated" class="form-label">How many times was you vacinated?</label>
              <select class="form-select" aria-label="Default select example" name="covidvacinated">
                <option selected>---Open this select menu---</option>
                <option value="1 times">1 times</option>
                <option value="2 times">2 times</option>
                <option value="3 times">3 times</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="dose1type" class="form-label">Type of First Dose:</label>
              <input type="text" class="form-control" name ='dose1type'>
            </div>
            <div class="mb-3">
              <label for="dose1takedate" class="form-label">Date Taking :</label>
              <input type="date" class="form-control" name ='dose1takedate'>
            </div>
            <div class="mb-3">
              <label for="dose2type" class="form-label">Type of Second Dose:</label>
              <input type="text" class="form-control" name ='dose2type'>
            </div>
            <div class="mb-3">
              <label for="dose2takedate" class="form-label">Date Taking :</label>
              <input type="date" class="form-control" name ='dose2takedate'>
            </div>
            <div class="mb-3">
              <label for="dose3type" class="form-label">Type of Third Dose:</label>
              <input type="text" class="form-control" name ='dose3type'>
            </div>
            <div class="mb-3">
              <label for="dose3takedate" class="form-label">Date Taking :</label>
              <input type="date" class="form-control" name ='dose3takedate'>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3" style="width:50%;">Register</button>
      </div>
    </form>
  </div>
</div>